<?xml version="1.0" encoding="utf-8"?>
        <!DOCTYPE hibernate-mapping PUBLIC
                "-//Hibernate/Hibernate Mapping DTD//EN"
                "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
<class name="com.anna.crud.model.Post" table="posts">
    <meta attribute="class-description">
      Posts   ID | CONTENT | STATUS
    </meta>
    <id name="id" type="long" column="ID">
        <generator class="native"/>
    </id>
    <property name="content" column="CONTENT" type="string"/>
    <property name="status" column="STATUS" type="string"/>

    <set name="tags" table="tag_post"
         inverse="false" lazy="true" fetch="select" cascade="all" >
        <key>
            <column name="ID_POST" not-null="true" />
        </key>
        <many-to-many entity-name="com.anna.crud.model.Tag">
            <column name="ID_TAG" not-null="true" />
        </many-to-many>
    </set>

</class>
</hibernate-mapping>